<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--    Navigation Buttons-->
    <Style TargetType="{x:Type RadioButton}"
           x:Key="MenuButtonTheme">

        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Grid Height="Auto"
                              Width="Auto">

                            <Border x:Name="BackBorder"
                                    BorderBrush="{StaticResource Theme}"
                                    Background="{StaticResource Darker}"
                                    BorderThickness="2 2 0 2"
                                    CornerRadius="5 0 0 5"
                                    Margin="0 5 0 5"
                                    Padding="20"
                                    HorizontalAlignment="Right"
                                    Width="50"
                                    VerticalAlignment="Stretch"
                                    Visibility="Visible"/>

                            <ContentPresenter Content="{TemplateBinding Content}"
                                              Height="{TemplateBinding Height}"/>

                            <Border Background="{StaticResource Theme}" Opacity=".1"
                                    CornerRadius="15 0 0 15" Margin="5 2 0 2"
                                    x:Name="ButtonCover"/>
                        </Grid>


                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ButtonCover" Property="Visibility" Value="Hidden"/>
                                <Setter TargetName="BackBorder" Property="Width" Value="50"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="BackBorder"
                                                             Storyboard.TargetProperty="Width"
                                                             From="0" To="50" Duration="0:0:.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="BackBorder"
                                                             Storyboard.TargetProperty="Width"
                                                             From="50" To="0" Duration="0:0:.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                
                            </Trigger>

                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="ButtonCover" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="BackBorder" Property="Width" Value="0"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonCover" Property="Opacity" Value="0.1"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter TargetName="ButtonCover" Property="Opacity" Value="0.0"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                    
                    

                </Setter.Value>

            </Setter>
        </Style.Setters>

    </Style>

    <!--    Utility Buttons-->
    <Style TargetType="{x:Type Button}"  x:Key="MenuButtonTheme-1">

        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid Height="Auto"
                              Width="Auto">

                            <Border x:Name="BackBorder"
                                    BorderThickness="2 2 0 2"
                                    CornerRadius="5 0 0 5"
                                    Margin="0 5 0 5"
                                    Padding="20"
                                    HorizontalAlignment="Right"
                                    Width="50"
                                    VerticalAlignment="Stretch"
                                    Visibility="Visible"/>

                            <ContentPresenter Content="{TemplateBinding Content}"
                                              Height="{TemplateBinding Height}"/>

                            <Border/>
                        </Grid>

                    </ControlTemplate>
                    
                    

                </Setter.Value>

            </Setter>
        </Style.Setters>

    </Style>
    
    <!--    Pop up button-->
    <Style TargetType="{x:Type ToggleButton}"  x:Key="PopupButtonTheme">

        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid Height="Auto"
                              Width="Auto">

                            <Border Background="{StaticResource Theme}" Opacity=".1"
                                    x:Name="ButtonCover" Visibility="Hidden"/>

                            <ContentPresenter Content="{TemplateBinding Content}"
                                              Height="{TemplateBinding Height}" 
                                              VerticalAlignment="Center"/>

                            <Border/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Margin" Value="40 2 8 2"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Margin" Value="8 2 40 2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                    
                    

                </Setter.Value>

            </Setter>
        </Style.Setters>

    </Style>

</ResourceDictionary>